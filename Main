    public void QuizPY(){
        //Q1
        System.out.println("\nQ1.  Which one of the following is not a keyword in Python language?\n" +
                "1) pass\n" +
                "2) eval\n" +
                "3) assert\n" +
                "4) nonlocal");
        ans = sc.nextInt();
        if(ans == 2) {
            score = score + 10;
        } else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizPY();
        }
        //Q2
        System.out.println("Q2. Which keyword is used for function in Python language?\n" +
                "1) Function\n" +
                "2) def\n" +
                "3) Fun\n" +
                "4) Define");
        ans = sc.nextInt();
        if(ans == 2) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizPY();
        }
        //Q3
        System.out.println("Q3. What will be the value of the following Python expression? " +
                "\n\t4 + 3 % 5" +
                "\n1) 7" +
                "\n2) 2" +
                "\n3) 4" +
                "\n4) 1");
        ans = sc.nextInt();
        if(ans == 1) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizPY();
        }
        //Q4
        System.out.println("Q4. Which of the following is the correct extension of the Python file?\n" +
                "1) .python\n" +
                "2) .pl\n" +
                "3) .py\n" +
                "4) .p");
        ans = sc.nextInt();
        if(ans == 3) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizPY();
        }
        //Q5
        System.out.println("Q5. Which type of Programming does Python support?\n" +
                "1) object-oriented programming \n" +
                "2) structured programming\n" +
                "3) functional programming \n" +
                "4) all of the mentioned");
        ans = sc.nextInt();
        if(ans == 4) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizPY();
        }
        System.out.println("Your Score of the Quiz is: "+score);
    }
    public void Rules(){
        System.out.println("1. You are trained to be a programmer and not a story teller, answer point to point \n" +
                "2. Do not unnecessarily smile at the person sitting next to you, they may also not know the answer\n" +
                "3. You may have lot of options in life but here all the questions are compulsory\n" +
                "4. Crying is allowed but please do so quietly.\n" +
                "5. Only a fool asks and a wise answers (Be wise, not otherwise)\n" +
                "6. Do not get nervous if your friend is answering more questions, may be he/she is doing Jai Mata Di\n" +
                "7. Brace yourself, this paper is not for the faint hearted\n" +
                "8. May you know more than what John Snow knows, Good Luck\n");
    }
    static int try1 = 0;
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Main m = new Main();
        {
            if (try1 == 0) {
                m.Login();
                try1+=1;
            }
        }
        try{
            System.out.println(" ");
            System.out.println("Choose the Quiz to continue with\n");
            System.out.println("a. JAVA Quiz\n" +
                    "b. C++ Quiz\n" +
                    "c. Python Quiz\n" +
                    "d. Rules\n" +
                    "e. Exit");
            String ch = sc.nextLine();
            switch(ch){
                case "a":
                    m.QuizJava();
                    break;
                case "b":
                    m.QuizCPP();
                    break;
                case "c":
                    m.QuizPY();
                    break;
                case "d":
                    m.Rules();
                    m.main(args);
                    break;
                case "e":
                    break;
                default:
                    System.out.println("\nInvalid Input");
                    main(args);
            }
        }catch(Exception ec){
            System.out.println("\nSomething went wrong");
        }
        System.out.println("\nThank You For Taking The Test");
    }
}
