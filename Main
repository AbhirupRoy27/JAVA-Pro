                "    #include <iostream>\n" +
                "    using namespace std;\n" +
                "    int main ()\n" +
                "    {\n" +
                "        int a, b, c;\n" +
                "        a = 2;\n" +
                "        b = 7;\n" +
                "        c = (a > b) ? a : b;\n" +
