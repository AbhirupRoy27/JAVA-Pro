import java.io.IOException;
import java.util.*;

public class Main
{
    int score,ans,len;
    String reg;
    Scanner sc = new Scanner(System.in);
    public void Login(){
        try{
            String name;
            System.out.print("\nEnter your name:");
            name = sc.nextLine();
            System.out.print("Enter your Registration number:");
            String reg = sc.nextLine();
            len = reg.length();
            if(len!=8) {
                System.out.println("\nEnter a valid REGISTRATION NUMBER");
                Login();
            }else{
            System.out.println(" ");
            System.out.println("Welcome "+name.toUpperCase()+", "+reg+ " to the multiple Quiz Platform");
        }}
        catch (Exception exc){
            System.out.println("Enter a Valid Name");
            Login();
        }
    }
    public void QuizJava(){
        System.out.println("\nQ1. Select the valid statement in JAVA.");
        System.out.println("1. char[] ch = new char[5]\n" +
                "2. char[] ch = new char(5)\n" +
                "3. char[] ch = new char()\n" +
                "4. char[] ch = new char[]");
        ans = sc.nextInt();
        if(ans == 1) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizJava();
        }
        System.out.println("Q2. Select the valid statement to declare and initialize an array in JAVA.");
        System.out.println("1. int[][] A = {1, 2, 3}\n" +
                "2. int[] A = (1, 2, 3)\n" +
                "3. int[] A = {}\n" +
                "4. int[] A = {1, 2, 3}");
        ans = sc.nextInt();
        if(ans == 4) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizJava();
        }
        System.out.println("Q3. When is the object created with new keyword in JAVA?");
        System.out.println("1. Depends on the code\n" +
                "2. At compile time\n" +
                "3. At run time\n" +
                "4. None");
        ans = sc.nextInt();
        if(ans == 3) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizJava();
        }
        System.out.println("Q4. Output of Math.floor(3.6)?");
        System.out.println("1. 3\n" +
                "2. 3.0\n" +
                "3. 4\n" +
                "4. 4.0");
        ans = sc.nextInt();
        if(ans == 2) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizJava();
        }
        System.out.println("Q5. Identify the infinite loop.");
        System.out.println("1. for(int i = 0 ; i < 5 ; i++)\n" +
                "2. for( ; ; )\n" +
                "3. for(int i = 0 ; ; i++)\n" +
                "4. All of the above");
        ans = sc.nextInt();
        if(ans == 4) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizJava();
        }
        System.out.println("Your Score of the Quiz is: "+score);
    }
    public void QuizCPP(){
        System.out.println("\nQ1. Which of the following correctly declares an array in C++?\n" +
                "1) array{10};\n" +
                "2) array array[10];\n" +
                "3) int array;\n" +
                "4) int array[10];");
        ans = sc.nextInt();
        if(ans == 4) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizCPP();
        }
        System.out.println("Q2. What is Inheritance in C++?\n" +
                "1) Deriving new classes from existing classes\n" +
                "2) Overloading of classes\n" +
                "3) Classes with same names\n" +
                "4) Wrapping of data into a single class");
        ans = sc.nextInt();
        if(ans == 1) {
            score = score + 10;
        }else if (ans>4) {
            System.out.println("\nInvalid Option Selected");
            QuizCPP();
